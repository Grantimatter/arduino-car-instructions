<UserControl x:Class="InstructionSoftware.User_Controls.InstructionBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InstructionSoftware.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="60" Background="{Binding ElementName=bgColor}">
            <Rectangle Fill="Maroon" VerticalAlignment="Center" HorizontalAlignment="Left" Height="40" Width="40"  Margin="5,5,0,5"/>
            <Label Content="{Binding ElementName=InstructionLabel}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-40,0,0,0"/>
        </DockPanel>
    </Grid>
</UserControl>
