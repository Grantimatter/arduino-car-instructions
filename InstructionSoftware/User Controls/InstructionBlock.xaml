<UserControl x:Class="InstructionSoftware.User_Controls.InstructionBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InstructionSoftware.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="60" Background="{Binding Path=BgColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="60">
            <Rectangle Fill="{Binding Path=BlockColor}" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Left" Height="40" Width="40"  Margin="5,5,0,5"/>
        </DockPanel>

        <DockPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <Slider Width="100" DockPanel.Dock="Left" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,5,0,0" Foreground="DarkGray"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="2">
            <Slider Width="100" DockPanel.Dock="Left" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,5" Foreground="DarkGray"/>
        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="4" Grid.RowSpan="3">

            <Label Content="{Binding Path=InstructionIndex}" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
            <Label Content="{Binding Path=InstructionLabel}" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,-10,0"/>
        </DockPanel>
    </Grid>
</UserControl>
