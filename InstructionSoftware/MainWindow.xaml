<Window x:Name="main_window" x:Class="InstructionSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstructionSoftware"
        mc:Ignorable="d"
        Title="Carduino" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Grid.RowSpan="3" Grid.ColumnSpan="4" Width="400" Margin="0,0,0,0" >
            <TextBox x:Name="messageBox"/>
            <Button Command="{Binding DisplayMessageCommand}" CommandParameter="{Binding ElementName=messageBox, Path=Text}" VerticalAlignment="Center" HorizontalAlignment="Center" > 
                Show Message
            </Button>
        </StackPanel>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="4" Height="20" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MaxHeight="22"/>
        <DockPanel Grid.ColumnSpan="4" Margin="0,0,0,0" Grid.RowSpan="3">
            <Menu DockPanel.Dock="Top" Height="20" Margin="0,0,0,0" VerticalAlignment="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New"/>
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Save">
                        <MenuItem.Icon>
                            <Image Source="/icons/save2.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Exit" Command="{Binding CloseAppCommand}"/>

                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Undo"/>
                    <MenuItem Header="_Redo"/>
                    <MenuItem Header="_Copy"/>
                    <MenuItem Header="_Paste"/>
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Theme"/>
                    <MenuItem Header="_Layout"/>
                </MenuItem>
                
            </Menu>
        </DockPanel>
    </Grid>
</Window>
